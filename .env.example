// Environment configuration template
// Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME=ClamFlow
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Railway Backend API
NEXT_PUBLIC_API_URL=https://your-clamflow-backend.railway.app
API_SECRET_KEY=your_api_secret_key

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# Database (if using direct connection)
DATABASE_URL=postgresql://username:password@host:port/database
DIRECT_URL=postgresql://username:password@host:port/database

# RFID Hardware Configuration
RFID_READER_IP=192.168.1.100
RFID_READER_PORT=8080
RFID_CONNECTION_TIMEOUT=5000

# QR Code & Label Generation
LABEL_TEMPLATE_BUCKET=label-templates
QR_CODE_BASE_URL=https://your-domain.com/track

# File Upload & Storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
STORAGE_BUCKET=clamflow-uploads

# Email Service (for notifications)
EMAIL_FROM=noreply@clamflow.com
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# WebSocket Configuration (for real-time updates)
WS_URL=wss://your-backend.railway.app/ws
WS_HEARTBEAT_INTERVAL=30000

# Security & CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_CREDENTIALS=true

# Analytics & Monitoring
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_RFID=true
NEXT_PUBLIC_ENABLE_QR_SCANNING=true
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Development Tools
ANALYZE=false
DISABLE_ESLINT=false
DISABLE_TYPE_CHECK=false

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/clamflow_test
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=clamflow

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Plant-specific Configuration
DEFAULT_PLANT_ID=plant_001
DEFAULT_TIMEZONE=Pacific/Auckland
DEFAULT_LOCALE=en-NZ

# Quality Control Thresholds
QC_MIN_WEIGHT=100
QC_MAX_WEIGHT=300
QC_GRADE_THRESHOLD=B

# Inventory Management
LOW_STOCK_THRESHOLD=50
REORDER_POINT=25
MAX_BATCH_SIZE=1000

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_FRAME_GUARD=true
